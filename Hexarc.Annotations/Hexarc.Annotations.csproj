<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <Nullable>Enable</Nullable>
  </PropertyGroup>

  <PropertyGroup>
    <PackageId>Hexarc.Annotations</PackageId>
    <Version>2.0.0</Version>
    <Authors>Max Koverdyaev</Authors>
    <Company>Hexarc Software</Company>
    <PackageTags>Attributes;Annotations;Hexarc</PackageTags>
    <PackageProjectUrl>https://github.com/hexarc-software/hexarc-annotations</PackageProjectUrl>
    <RepositoryUrl>https://github.com/hexarc-software/hexarc-annotations</RepositoryUrl>
    <Description>
      The Hexarc collection of attributes and annotations.
    </Description>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageIcon>hexarc.png</PackageIcon>
    <PackageIconFullPath>$(MSBuildThisFileDirectory)hexarc.png</PackageIconFullPath>
  </PropertyGroup>

  <ItemGroup>
    <None Include="$(PackageIconFullPath)">
      <PackagePath>\</PackagePath>
      <Pack>true</Pack>
    </None>
  </ItemGroup>

</Project>
